# Example environment variables for reg-system
# Copy this to .env or populate secret `PROJECT_ENV` with its contents

# App
PORT=3000

# OpenTelemetry (optional)
OTEL_SERVICE_NAME=reg-system
# OTLP endpoint (e.g., http://otel-collector:4318)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_CONSOLE_EXPORTER=false

# OIDC / Identity Provider (Phase 2)
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ISSUER=

# Nginx Proxy Manager automation (optional)
NPM_URL=
NPM_USER=
NPM_PASS=
DOMAIN=
TARGET_HOST=localhost
TARGET_PORT=3000
